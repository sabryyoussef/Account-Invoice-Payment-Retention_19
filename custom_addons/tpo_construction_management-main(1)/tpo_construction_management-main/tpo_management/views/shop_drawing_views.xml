<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tpo_shop_drawing_tree" model="ir.ui.view">
        <field name="name">tpo.shop.drawing.tree</field>
        <field name="model">tpo.shop.drawing</field>
        <field name="arch" type="xml">
            <list string="Shop Drawings">
                <field name="name"/>
                <field name="project_id"/>
                <field name="discipline"/>
                <field name="submission_date"/>
                <field name="state"/>
                <field name="revision_number"/>
            </list>
        </field>
    </record>
    
    <record id="view_tpo_shop_drawing_form" model="ir.ui.view">
        <field name="name">tpo.shop.drawing.form</field>
        <field name="model">tpo.shop.drawing</field>
        <field name="arch" type="xml">
            <form string="Shop Drawing">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="project_id"/>
                            <field name="discipline"/>
                            <field name="drawing_number"/>
                            <field name="revision_number"/>
                        </group>
                        <group>
                            <field name="technical_office_engineer_id"/>
                            <field name="submission_date"/>
                            <field name="response_date"/>
                            <field name="site_verified"/>
                        </group>
                    </group>
                    <field name="description"/>
                    <notebook>
                        <page string="Submission Log">
                            <field name="submission_log_ids">
                                <list>
                                    <field name="submission_date"/>
                                    <field name="revision_number"/>
                                    <field name="status"/>
                                    <field name="response_date"/>
                                </list>
                            </field>
                        </page>
                        <page string="Drawings">
                            <field name="document_ids" widget="many2many_binary"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    
    <record id="action_tpo_shop_drawing" model="ir.actions.act_window">
        <field name="name">Shop Drawings</field>
        <field name="res_model">tpo.shop.drawing</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>

