<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tpo_project_tree" model="ir.ui.view">
        <field name="name">tpo.project.tree</field>
        <field name="model">tpo.project</field>
        <field name="arch" type="xml">
            <list string="TPO Projects">
                <field name="code"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="phase"/>
                <field name="project_manager_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </list>
        </field>
    </record>
    
    <record id="view_tpo_project_form" model="ir.ui.view">
        <field name="name">tpo.project.form</field>
        <field name="model">tpo.project</field>
        <field name="arch" type="xml">
            <form string="TPO Project">
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="project_id"/>
                        </group>
                        <group>
                            <field name="phase"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="handover_date"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="project_manager_id"/>
                            <field name="technical_office_engineer_id"/>
                            <field name="site_engineer_id"/>
                            <field name="document_controller_id"/>
                        </group>
                        <group>
                            <field name="document_control_code"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Documents Summary">
                            <group>
                                <field name="boq_count" widget="statinfo" string="BOQs"/>
                                <field name="shop_drawing_count" widget="statinfo" string="Shop Drawings"/>
                                <field name="rfi_count" widget="statinfo" string="RFIs"/>
                                <field name="itr_count" widget="statinfo" string="ITRs"/>
                                <field name="change_order_count" widget="statinfo" string="Change Orders"/>
                                <field name="payment_application_count" widget="statinfo" string="Payment Applications"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    
    <record id="action_tpo_project" model="ir.actions.act_window">
        <field name="name">TPO Projects</field>
        <field name="res_model">tpo.project</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first TPO Project
            </p>
            <p>
                Manage all your technical project office documents and workflows.
            </p>
        </field>
    </record>
</odoo>

