<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tpo_project_handover_tree" model="ir.ui.view">
        <field name="name">tpo.project.handover.tree</field>
        <field name="model">tpo.project.handover</field>
        <field name="arch" type="xml">
            <list string="Project Handover">
                <field name="name"/>
                <field name="project_id"/>
                <field name="handover_date"/>
                <field name="handover_type"/>
                <field name="state"/>
            </list>
        </field>
    </record>
    
    <record id="view_tpo_project_handover_form" model="ir.ui.view">
        <field name="name">tpo.project.handover.form</field>
        <field name="model">tpo.project.handover</field>
        <field name="arch" type="xml">
            <form string="Project Handover Certificate">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,prepared,submitted,signed"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="project_id"/>
                            <field name="handover_date"/>
                            <field name="handover_type"/>
                        </group>
                        <group>
                            <field name="project_manager_id"/>
                            <field name="administration_id"/>
                            <field name="all_items_completed"/>
                        </group>
                    </group>
                    <field name="description"/>
                    <notebook>
                        <page string="Handover Checklist">
                            <field name="checklist_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="completed"/>
                                    <field name="completed_date"/>
                                    <field name="completed_by"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    
    <record id="action_tpo_project_handover" model="ir.actions.act_window">
        <field name="name">Project Handover</field>
        <field name="res_model">tpo.project.handover</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>

