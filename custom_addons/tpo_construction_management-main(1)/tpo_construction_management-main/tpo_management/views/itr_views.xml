<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tpo_itr_tree" model="ir.ui.view">
        <field name="name">tpo.itr.tree</field>
        <field name="model">tpo.itr</field>
        <field name="arch" type="xml">
            <list string="Inspection &amp; Test Request">
                <field name="name"/>
                <field name="project_id"/>
                <field name="request_date"/>
                <field name="inspection_type"/>
                <field name="state"/>
            </list>
        </field>
    </record>
    
    <record id="view_tpo_itr_form" model="ir.ui.view">
        <field name="name">tpo.itr.form</field>
        <field name="model">tpo.itr</field>
        <field name="arch" type="xml">
            <form string="Inspection &amp; Test Request">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,inspected,approved"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="project_id"/>
                            <field name="request_date"/>
                            <field name="inspection_date"/>
                        </group>
                        <group>
                            <field name="site_engineer_id"/>
                            <field name="technical_office_engineer_id"/>
                            <field name="inspection_type"/>
                            <field name="priority"/>
                        </group>
                    </group>
                    <field name="location"/>
                    <field name="description"/>
                    <notebook>
                        <page string="Inspection Results">
                            <group>
                                <field name="inspection_result"/>
                                <field name="inspection_notes"/>
                                <field name="inspector_name"/>
                                <field name="technical_office_participated"/>
                                <field name="participation_notes"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    
    <record id="action_tpo_itr" model="ir.actions.act_window">
        <field name="name">Inspection &amp; Test Request</field>
        <field name="res_model">tpo.itr</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>

