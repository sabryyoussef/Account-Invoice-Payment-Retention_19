<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tpo_as_built_drawing_tree" model="ir.ui.view">
        <field name="name">tpo.as.built.drawing.tree</field>
        <field name="model">tpo.as.built.drawing</field>
        <field name="arch" type="xml">
            <list string="As-Built Drawings">
                <field name="name"/>
                <field name="project_id"/>
                <field name="discipline"/>
                <field name="completion_date"/>
                <field name="state"/>
            </list>
        </field>
    </record>
    
    <record id="view_tpo_as_built_drawing_form" model="ir.ui.view">
        <field name="name">tpo.as.built.drawing.form</field>
        <field name="model">tpo.as.built.drawing</field>
        <field name="arch" type="xml">
            <form string="As-Built Drawing">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,completed,approved"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="project_id"/>
                            <field name="discipline"/>
                            <field name="drawing_number"/>
                        </group>
                        <group>
                            <field name="technical_office_engineer_id"/>
                            <field name="surveyor_id"/>
                            <field name="completion_date"/>
                            <field name="site_measured"/>
                        </group>
                    </group>
                    <field name="description"/>
                    <field name="changes_description"/>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    
    <record id="action_tpo_as_built_drawing" model="ir.actions.act_window">
        <field name="name">As-Built Drawings</field>
        <field name="res_model">tpo.as.built.drawing</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>

