<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tpo_payment_application_tree" model="ir.ui.view">
        <field name="name">tpo.payment.application.tree</field>
        <field name="model">tpo.payment.application</field>
        <field name="arch" type="xml">
            <list string="Payment Applications">
                <field name="name"/>
                <field name="project_id"/>
                <field name="application_date"/>
                <field name="total_amount" sum="Total"/>
                <field name="state"/>
            </list>
        </field>
    </record>
    
    <record id="view_tpo_payment_application_form" model="ir.ui.view">
        <field name="name">tpo.payment.application.form</field>
        <field name="model">tpo.payment.application</field>
        <field name="arch" type="xml">
            <form string="Payment Application">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,paid"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="project_id"/>
                            <field name="application_date"/>
                            <field name="period_start_date"/>
                            <field name="period_end_date"/>
                        </group>
                        <group>
                            <field name="technical_office_engineer_id"/>
                            <field name="accountant_id"/>
                            <field name="total_amount"/>
                            <field name="site_verified"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Application Lines">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="item_code"/>
                                    <field name="description"/>
                                    <field name="unit"/>
                                    <field name="quantity"/>
                                    <field name="unit_price"/>
                                    <field name="amount"/>
                                    <field name="progress_percentage"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    
    <record id="action_tpo_payment_application" model="ir.actions.act_window">
        <field name="name">Payment Applications</field>
        <field name="res_model">tpo.payment.application</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>

