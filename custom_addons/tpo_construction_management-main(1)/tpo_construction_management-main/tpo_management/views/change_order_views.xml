<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tpo_change_order_tree" model="ir.ui.view">
        <field name="name">tpo.change.order.tree</field>
        <field name="model">tpo.change.order</field>
        <field name="arch" type="xml">
            <list string="Change Orders">
                <field name="name"/>
                <field name="project_id"/>
                <field name="date"/>
                <field name="change_type"/>
                <field name="change_amount" sum="Total"/>
                <field name="state"/>
            </list>
        </field>
    </record>
    
    <record id="view_tpo_change_order_form" model="ir.ui.view">
        <field name="name">tpo.change.order.form</field>
        <field name="model">tpo.change.order</field>
        <field name="arch" type="xml">
            <form string="Change Order">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="project_id"/>
                            <field name="date"/>
                            <field name="change_type"/>
                        </group>
                        <group>
                            <field name="project_manager_id"/>
                            <field name="technical_office_engineer_id"/>
                            <field name="site_engineer_id"/>
                        </group>
                    </group>
                    <field name="subject"/>
                    <field name="location"/>
                    <field name="description"/>
                    <field name="reason"/>
                    <notebook>
                        <page string="Financial Impact">
                            <group>
                                <field name="original_amount"/>
                                <field name="revised_amount"/>
                                <field name="change_amount"/>
                            </group>
                        </page>
                        <page string="Change Order Lines">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="item_code"/>
                                    <field name="description"/>
                                    <field name="original_quantity"/>
                                    <field name="revised_quantity"/>
                                    <field name="quantity_change"/>
                                    <field name="unit_price"/>
                                    <field name="amount"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    
    <record id="action_tpo_change_order" model="ir.actions.act_window">
        <field name="name">Change Orders</field>
        <field name="res_model">tpo.change.order</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>

