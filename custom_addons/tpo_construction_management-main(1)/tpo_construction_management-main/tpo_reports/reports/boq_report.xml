<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_boq" model="ir.actions.report">
        <field name="name">BOQ Report</field>
        <field name="model">tpo.boq</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">tpo_reports.boq_report_template</field>
        <field name="report_file">tpo_reports.boq_report</field>
        <field name="print_report_name">'BOQ Report - %s' % (object.name)</field>
    </record>
    
    <template id="boq_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="row">
                        <div class="col-12">
                            <h2>Bill of Quantities Report</h2>
                            <h3 t-field="doc.name"/>
                            <p><strong>Project:</strong> <span t-field="doc.project_id.name"/></p>
                            <p><strong>Date:</strong> <span t-field="doc.date"/></p>
                            <p><strong>Status:</strong> <span t-field="doc.state"/></p>
                            <p><strong>Total Amount:</strong> <span t-field="doc.total_amount"/></p>
                            
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Item Code</th>
                                        <th>Description</th>
                                        <th>Unit</th>
                                        <th>Quantity</th>
                                        <th>Unit Price</th>
                                        <th>Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="doc.line_ids" t-as="line">
                                        <tr>
                                            <td t-field="line.item_code"/>
                                            <td t-field="line.description"/>
                                            <td t-field="line.unit"/>
                                            <td t-field="line.quantity"/>
                                            <td t-field="line.unit_price"/>
                                            <td t-field="line.amount"/>
                                        </tr>
                                    </t>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="5"><strong>Total</strong></td>
                                        <td t-field="doc.total_amount"/>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </template>
</odoo>

