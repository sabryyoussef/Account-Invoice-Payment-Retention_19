<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_document_status" model="ir.actions.report">
        <field name="name">Document Status Dashboard</field>
        <field name="model">tpo.project</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">tpo_reports.document_status_report_template</field>
        <field name="report_file">tpo_reports.document_status_report</field>
        <field name="print_report_name">'Document Status Report - %s' % (object.name)</field>
    </record>
    
    <template id="document_status_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="project">
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="row">
                        <div class="col-12">
                            <h2>Document Status Dashboard</h2>
                            <h3 t-field="project.name"/>
                            
                            <h4>Document Summary</h4>
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Document Type</th>
                                        <th>Count</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>BOQs</td>
                                        <td t-field="project.boq_count"/>
                                    </tr>
                                    <tr>
                                        <td>Shop Drawings</td>
                                        <td t-field="project.shop_drawing_count"/>
                                    </tr>
                                    <tr>
                                        <td>RFIs</td>
                                        <td t-field="project.rfi_count"/>
                                    </tr>
                                    <tr>
                                        <td>ITRs</td>
                                        <td t-field="project.itr_count"/>
                                    </tr>
                                    <tr>
                                        <td>Change Orders</td>
                                        <td t-field="project.change_order_count"/>
                                    </tr>
                                    <tr>
                                        <td>Payment Applications</td>
                                        <td t-field="project.payment_application_count"/>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </template>
</odoo>

