<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="model">res.config.settings</field>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='account']" position="inside">
                <block title="Payment Retention">
                    <setting id="payment_retention_setting" string="Enable Invoice's Retention on Payment" help="Enable retention option in invoice, to be retained on payment.">
                        <field name="group_payment_retention"/>
                        <div class="content-group" invisible="not group_payment_retention">
                            <div class="row mt16">
                                <label for="retention_account_id" string="Retention Payable Account" class="col-lg-4 o_light_label"/>
                                <field name="retention_account_id" class="col-lg-8" required="group_payment_retention"/>
                            </div>
                            <div class="row mt16">
                                <label for="retention_receivable_account_id" string="Retention Receivable Account" class="col-lg-4 o_light_label"/>
                                <field name="retention_receivable_account_id" class="col-lg-8" required="group_payment_retention"/>
                            </div>
                        </div>
                    </setting>
                    <setting id="retention_method_setting" string="Retention Method" help="Method for calculating retention amount">
                        <field name="retention_method" widget="radio"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
