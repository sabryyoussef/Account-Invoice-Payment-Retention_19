<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="model">res.config.settings</field>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='account']" position="inside">
                <block title="Payment Retention">
                    <setting id="payment_retention_settings">
                <block title="Payment Retention">
                    <setting id="payment_retention_settings">
                        <field name="group_payment_retention" />
                        <div class="content-group">
                            <div class="row mt16">
                                <label for="group_payment_retention" string="Enable Invoice's Retention on Payment" class="col-lg-3 o_light_label"/>
                                <div class="text-muted col-lg-9">
                                    Enable retention option in invoice, to be retained on payment.
                                </div>
                            </div>
                        </div>
                        <div class="content-group" invisible="not group_payment_retention">
                            <div class="row mt16">
                                <label for="retention_account_id" string="Retention Payable Account" class="col-lg-3 o_light_label"/>
                                <field name="retention_account_id" class="col-lg-9" required="group_payment_retention"/>
                            </div>
                            <div class="row mt16">
                                <label for="retention_receivable_account_id" string="Retention Receivable Account" class="col-lg-3 o_light_label"/>
                                <field name="retention_receivable_account_id" class="col-lg-9" required="group_payment_retention"/>
                            </div>
                        </div>
                    </setting>
                    <setting id="retention_method_setting">
                        <div class="content-group">
                            <div class="row">
                                <label for="retention_method" string="Retention Method" class="col-lg-3 o_light_label"/>
                                <div class="col-lg-9">
                                    <div class="text-muted">
                                        Method for calculating retention amount
                                    </div>
                                    <field name="retention_method" class="o_light_label" widget="radio"/>
                                </div>
                            </div>
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
